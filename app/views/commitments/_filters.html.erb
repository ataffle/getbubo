<%= simple_form_for(:filters, url: commitments_path, method: :get, html: { class: 'form-inline filter-commitment' }) do |f| %>
  <%= f.input :user, collection: User.all, required: false, label: false, input_html: { class: "select2" }, prompt: "User", selected: @user %>
  <%= f.input :period, collection: commitments_periods_for_select, required: false, label: false, input_html: { class: "select2" }, prompt: "Select period", selected: @period %>
  <%= f.input :status, collection: commitments_statuses_for_select, required: false, label: false, input_html: { class: "select2" }, prompt: "Filter by status", selected: @status %>

  <%= f.submit "Filter", class: "btn-primary-bubo" %>
<% end %>
