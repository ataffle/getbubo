
<div class="container">
  <div class="row">
    <% @suppliers.each do |supplier| %>
    <div class="col-xs-12 col-sm-2">
      <div class="card-supplier">
        <div class="card-description">
          <h2><%= supplier.name %></h2>
          <%= link_to edit_supplier_path(supplier), class: "button", method: :get do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset">
      <%= simple_form_for @supplier do |f| %>
        <%= f.input :name %>
        <%= f.submit "Create", class: "button" %>
      <% end %>
    </div>
  </div>
</div>

