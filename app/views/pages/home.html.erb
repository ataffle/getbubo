                  <% total << item.amount %>
              <% end %>
              <li><%= number_with_delimiter(total.sum, delimiters: ".") %>k</li>
              <li><p style="font-size: 15px">Oustanding Commitments</p></li>
            </ul>
          </h3>
        </div>
        <div class="card-stat">
          <h3>
